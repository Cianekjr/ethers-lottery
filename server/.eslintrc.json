{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "google",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "parser": "flow",
                "semi": false,
                "tabWidth": 2,
                "printWidth": 180
            }
        ],
        "require-jsdoc": "off"
    }
}